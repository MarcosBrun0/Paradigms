#lang racket      ;; define a linguagem default
; ------------------------------------------------

; Função para calcular o dobro de um número
(define dobro
  (lambda (x)
    (* 2 x)))

; Função para verificar se um número é par
(define par?
  (lambda (x)
    (= (remainder x 2) 0)))

; Exemplos de uso das funções
(displayln "O dobro de 5 é: " (dobro 5))
(displayln "O dobro de 10 é: " (dobro 10))
(displayln "É 6 par? " (par? 6))
(displayln "É 7 par? " (par? 7))
